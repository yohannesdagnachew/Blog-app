<div class='post-container'>
  <h5 class='post-container--heading'>Post #<%=post_data.id%></h5>
  <p class='post-container--text'><%=post_data.text%></p>
  <p class='post-container--counter'>
    Comments: <%=post_data.comment_counter%>, Likes: <%=post_data.like_counter%>
  </p>

  <div class='post-container--buttons'>
  <%= button_to 'Add Comment', new_comment_path(user_id:current_user_id,id:post_data.id),method: 'get' ,class: 'comment-btn'%>
  <%= button_to 'Like', like_path(user_id:current_user_id,id:post_data.id),method: 'put' ,class: 'like-btn'%>
  </div>
  <%= flash[:success]%>
</div>